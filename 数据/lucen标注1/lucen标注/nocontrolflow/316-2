FragListBuilder fragListBuilder = new SimpleFragListBuilder(); // #J
FragmentsBuilder fragmentBuilder = new ScoreOrderFragmentsBuilder( BaseFragmentsBuilder.COLORED_PRE_TAGS,BaseFragmentsBuilder.COLORED_POST_TAGS); // #K
return new FastVectorHighlighter(true, true, fragListBuilder, fragmentBuilder); // #L

